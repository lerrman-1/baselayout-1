<BaseLayout title="galería" description="Bienvenido a mi Galería">
  <section>
    <h2>Nuestra Galería de Imágenes</h2>
    <p>Explora nuestra colección de momentos capturados.</p>
  </section>

  <section>
    <div class="galería-grid">
      {
        imagenesGaleria.map((imagen) => (
          <div class="galería-item">
            <img src={imagen.src} alt={imagen.alt} loading="lazy" />
            <p>{imagen.caption}</p>
          </div>
        ))
      }
    </div>
  </section>
</BaseLayout>

<style>
  .galería-grid {
    display: grid;
    grid-template-columns: repeat(
      auto-fit,
      minmax(200px, 1fr)
    ); /* Columnas responsivas */
    gap: 1rem; /* Espacio entre imágenes */
  }
  .galería-item img {
    width: 100%;
    height: auto;
    border-radius: 8px; /* Bordes redondeados opcionales */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra sutil opcional */
  }
  .galería-item p {
    text-align: center;
    font-size: 0.9rem;
    color: #555;
    margin-top: 0.5rem;
  }
</style>
